<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <EditText
        android:id="@+id/edtID"
        style="@style/CustomEditText"
        android:hint="Mã SV"
        android:inputType="number"
        android:maxLength="6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtName"
        style="@style/CustomEditText"
        android:hint="Tên SV"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtID" />

    <EditText
        android:id="@+id/edtBirthYear"
        style="@style/CustomEditText"
        android:hint="Năm Sinh"
        android:inputType="number"
        android:maxLength="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtName" />

    <EditText
        android:id="@+id/edtMathPoint"
        style="@style/CustomEditText"
        android:hint="Điểm Toán"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtBirthYear" />

    <EditText
        android:id="@+id/edtPhysicsPoint"
        style="@style/CustomEditText"
        android:hint="Điểm Lý"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtMathPoint" />

    <EditText
        android:id="@+id/edtChemistryPoint"
        style="@style/CustomEditText"
        android:hint="Điểm Hóa"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtPhysicsPoint" />

    <EditText
        android:id="@+id/edtBiologyPoint"
        style="@style/CustomEditText"
        android:hint="Điểm Sinh"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtChemistryPoint" />

    <EditText
        android:id="@+id/edtHistoryPoint"
        style="@style/CustomEditText"
        android:hint="Điểm Sử"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtBiologyPoint" />

    <EditText
        android:id="@+id/edtGeographyPoint"
        style="@style/CustomEditText"
        android:hint="Điểm Địa"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtHistoryPoint" />

    <EditText
        android:id="@+id/edtLiteraturePoint"
        style="@style/CustomEditText"
        android:hint="Điểm Văn"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtGeographyPoint" />

    <EditText
        android:id="@+id/edtEnglishPoint"
        style="@style/CustomEditText"
        android:hint="Điểm Anh"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtLiteraturePoint" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Lưu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtEnglishPoint" />

</androidx.constraintlayout.widget.ConstraintLayout>